@model Asp.netCoreDatPhongKS.Models.Phong

@{
    ViewData["Title"] = "Xóa phòng";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa phòng</h2>

<h3>Bạn có chắc chắn muốn xóa phòng này?</h3>
<div>
    <h4>Thông tin phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Số phòng</dt>
        <dd class="col-sm-10">@Model.SoPhong</dd>
        <dt class="col-sm-2">Loại phòng</dt>
        <dd class="col-sm-10">@Model.LoaiPhong?.TenLoai</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>
        <dt class="col-sm-2">Tình trạng</dt>
        <dd class="col-sm-10">@Model.TinhTrang</dd>
        <dt class="col-sm-2">Giá phòng/đêm</dt>
        <dd class="col-sm-10">@Model.GiaPhong1Dem?.ToString("C")</dd>
        <dt class="col-sm-2">Số lượng khách</dt>
        <dd class="col-sm-10">@Model.SoLuongKhach</dd>
        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" alt="Hình ảnh phòng" style="max-width: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">Hình ảnh 1</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh1))
            {
                <img src="@Model.HinhAnh1" alt="Hình ảnh 1" style="max-width: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">Hình ảnh 2</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh2))
            {
                <img src="@Model.HinhAnh2" alt="Hình ảnh 2" style="max-width: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">Hình ảnh 3</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh3))
            {
                <img src="@Model.HinhAnh3" alt="Hình ảnh 3" style="max-width: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PhongId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>