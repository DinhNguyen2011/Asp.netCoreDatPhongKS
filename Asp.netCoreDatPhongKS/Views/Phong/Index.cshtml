@model IEnumerable<Asp.netCoreDatPhongKS.Models.Phong>

@{
    ViewData["Title"] = "Quản lý phòng";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <h2 class="text-dark mb-4">Quản lý phòng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus-circle"></i> Thêm phòng mới
        </a>
    </p>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered table-sm mb-0">
                    <thead class="bg-warning text-dark text-center">
                        <tr>
                            <th>Số phòng</th>
                            <th>Loại phòng</th>
                            <th class="d-none d-md-table-cell">Mô tả</th>
                            @* <th>Tình trạng</th> *@
                            <th>Giá/đêm</th>
                            <th>Số khách</th>
                            <th>Hình ảnh</th>
                            <th class="d-none d-md-table-cell">Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.SoPhong</td>
                                <td>@item.LoaiPhong?.TenLoai</td>
                                <td class="d-none d-md-table-cell text-truncate" style="max-width: 150px;" title="@item.MoTa">@item.MoTa</td>
                                @* <td class="text-center">@item.TinhTrang</td> *@
                                <td class="text-end">@item.GiaPhong1Dem?.ToString("C")</td>
                                <td class="text-center">@item.SoLuongKhach</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <img src="@Url.Content(item.HinhAnh)" alt="Hình ảnh" class="img-thumbnail" style="max-width: 60px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell text-center">
                                    @item.NgayTao?.ToString("dd/MM/yyyy")
                                </td>
                                <td class="text-center action-column">
                                    <a asp-action="Edit" asp-route-id="@item.PhongId" class="btn btn-warning btn-sm" title="Sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PhongId" class="btn btn-info btn-sm text-white" title="Chi tiết">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PhongId" class="btn btn-danger btn-sm" title="Xóa">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-sm th, .table-sm td {
        padding: 0.65rem;
        font-size: 0.9rem;
        vertical-align: middle;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .btn-sm i {
        margin-right: 4px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn:hover {
        opacity: 0.9;
    }

    .action-column {
        white-space: nowrap;
        min-width: 140px;
    }

    img.img-thumbnail {
        border-radius: 0.4rem;
        box-shadow: 0 0 3px rgba(0,0,0,0.2);
    }
</style>
