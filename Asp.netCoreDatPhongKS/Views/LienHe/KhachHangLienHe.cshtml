@model Asp.netCoreDatPhongKS.Models.LienHeVoiCtoi

@{
    ViewData["Title"] = "Liên Hệ Với Chúng Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Liên hệ với Khách sạn Thiềm Định để đặt phòng hoặc gửi thắc mắc. Chúng tôi luôn sẵn sàng hỗ trợ 24/7 tại TP.HCM.">
    <title>@ViewData["Title"] | Khách sạn Thiềm Định</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .contact-form input, .contact-form textarea {
            transition: all 0.3s ease;
        }

            .contact-form input:focus, .contact-form textarea:focus {
                transform: translateY(-2px);
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

        .floating-label {
            position: absolute;
            pointer-events: none;
            left: 15px;
            top: 10px;
            transition: 0.2s ease all;
            color: #999;
        }

        input:focus ~ .floating-label,
        input:not(:placeholder-shown) ~ .floating-label,
        textarea:focus ~ .floating-label,
        textarea:not(:placeholder-shown) ~ .floating-label {
            top: -10px;
            left: 10px;
            font-size: 12px;
            background: white;
            padding: 0 5px;
            color: #4a5568;
        }

        .map-container {
            height: 450px;
            width: 100%;
        }
    </style>
</head>

<body class="bg-gray-50 font-sans">
     <!-- Hero Section -->
    <section class="relative h-96 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80')">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        <div class="relative container mx-auto px-4 h-full flex items-center">
            <div class="text-white max-w-2xl">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
                <p class="text-xl mb-6">We're here to make your stay in Saigon unforgettable. Reach out to us anytime.</p>
                <div class="flex space-x-4">
                    <a href="#contact-form" class="bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-md font-medium transition duration-300">Send Message</a>
                    <a href="#contact-info" class="border border-white hover:bg-white hover:text-gray-800 text-white px-6 py-3 rounded-md font-medium transition duration-300">Contact Info</a>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-12">

                <!-- Contact Form -->
                <div class="lg:w-7/12 contact-form">
                    <h2 class="text-3xl font-bold text-gray-800 mb-4">Liên Hệ Với Khách Sạn Thiềm Định</h2>
                    <p class="text-gray-600 mb-6">Chúng tôi luôn sẵn sàng hỗ trợ bạn. Vui lòng điền thông tin bên dưới hoặc sử dụng các kênh liên lạc khác.</p>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="KhachHangLienHe" method="post" class="contact-form bg-gray-50 p-8 rounded-lg shadow-sm">
                        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-3"></div>

                        <div class="mb-6 relative">
                            <input asp-for="HoTen" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder=" " aria-labelledby="hoten-label" />
                            <label for="HoTen" id="hoten-label" class="floating-label">Họ và Tên</label>
                            <span asp-validation-for="HoTen" class="text-red-500"></span>
                        </div>

                        <div class="mb-6 relative">
                            <input asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder=" " aria-labelledby="email-label" />
                            <label for="Email" id="email-label" class="floating-label">Email</label>
                            <span asp-validation-for="Email" class="text-red-500"></span>
                        </div>

                        <div class="mb-6 relative">
                            <input asp-for="SoDienThoai" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder=" " aria-labelledby="sodienthoai-label" />
                            <label for="SoDienThoai" id="sodienthoai-label" class="floating-label">Số Điện Thoại (Tùy chọn)</label>
                            <span asp-validation-for="SoDienThoai" class="text-red-500"></span>
                        </div>

                        <div class="mb-6 relative">
                            <textarea asp-for="NoiDung" rows="6" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder=" " aria-labelledby="noidung-label"></textarea>
                            <label for="NoiDung" id="noidung-label" class="floating-label">Nội Dung Liên Hệ</label>
                            <span asp-validation-for="NoiDung" class="text-red-500"></span>
                        </div>

                        <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white py-3 px-6 rounded-md font-medium transition duration-300">
                            Gửi Liên Hệ <i class="fas fa-paper-plane ml-2"></i>
                        </button>
                    </form>
                </div>

