
@model Asp.netCoreDatPhongKS.Models.LienHeVoiCtoi

@{
    ViewData["Title"] = "Liên Hệ Với Chúng Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Đảm bảo phông chữ nhất quán với layout */
    .lienhe-page {
        font-family: 'Sora', sans-serif;
    }

        .lienhe-page h1, .lienhe-page h2, .lienhe-page h3, .lienhe-page h4 {
            font-family: 'Cormorant Upright', serif;
        }

    /* Kiểu cho form liên hệ */
    .lienhe-form input,
    .lienhe-form textarea {
        transition: all 0.3s ease;
        border-radius: 0.375rem;
    }

        .lienhe-form input:focus,
        .lienhe-form textarea:focus {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-color: #ff85a2;
            outline: none;
        }

    .lienhe-floating-label {
        position: absolute;
        pointer-events: none;
        left: 15px;
        top: 10px;
        transition: 0.2s ease all;
        color: #999;
        font-size: 16px;
    }

    .lienhe-form input:focus ~ .lienhe-floating-label,
    .lienhe-form input:not(:placeholder-shown) ~ .lienhe-floating-label,
    .lienhe-form textarea:focus ~ .lienhe-floating-label,
    .lienhe-form textarea:not(:placeholder-shown) ~ .lienhe-floating-label {
        top: -10px;
        left: 10px;
        font-size: 12px;
        background: white;
        padding: 0 5px;
        color: #ff85a2;
    }

    .lienhe-map-container {
        height: 450px;
        width: 100%;
        border-radius: 0.375rem;
    }

    /* Kiểu cho FAQ */
    .lienhe-faq-toggle:hover {
        background-color: #fff3cdb5; /* Màu bg-secondary từ layout */
    }

    .lienhe-faq-content {
        display: none;
    }

        .lienhe-faq-content.show {
            display: block;
        }

    /* Nút và các yếu tố tương tác */
    .lienhe-btn-primary {
        background-color: #ff85a2;
        border-color: #ff85a2;
        transition: background-color 0.3s ease;
    }

        .lienhe-btn-primary:hover {
            background-color: #e06f8c;
            border-color: #e06f8c;
        }

    /* Đảm bảo biểu tượng Font Awesome hiển thị đúng */
    .lienhe-icon-container i {
        font-family: 'Font Awesome 6 Free' !important;
        font-weight: 900; /* Solid icons */
        font-size: 1.25rem;
        color: #ff85a2; /* Màu từ layout */
    }
</style>

<!-- Bao bọc nội dung để cách ly kiểu -->
<div class="lienhe-page">

    <!-- Phần form liên hệ -->
    <section class="py-6">
        <div class="container-fluid padding-side">
            <div class="row g-4">
                <!-- Form liên hệ -->
                <div class="col-lg-7 lienhe-form">
                    <h2 class="fs-2 fw-bold mb-3">Liên Hệ Với Khách Sạn Thiềm Định</h2>
                    <p class="text-muted mb-4">Chúng tôi luôn sẵn sàng hỗ trợ bạn. Vui lòng điền thông tin bên dưới hoặc sử dụng các kênh liên lạc khác.</p>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-start border-4 border-success p-3 mb-4" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger border-start border-4 border-danger p-3 mb-4" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="KhachHangLienHe" method="post" class="lienhe-form bg-light p-4 rounded shadow-sm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4 position-relative">
                            <input asp-for="HoTen" class="form-control px-3 py-2" placeholder=" " aria-labelledby="hoten-label" />
                            <label for="HoTen" id="hoten-label" class="lienhe-floating-label">Họ và Tên</label>
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="mb-4 position-relative">
                            <input asp-for="Email" class="form-control px-3 py-2" placeholder=" " aria-labelledby="email-label" />
                            <label for="Email" id="email-label" class="lienhe-floating-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4 position-relative">
                            <input asp-for="SoDienThoai" class="form-control px-3 py-2" placeholder=" " aria-labelledby="sodienthoai-label" />
                            <label for="SoDienThoai" id="sodienthoai-label" class="lienhe-floating-label">Số Điện Thoại (Tùy chọn)</label>
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>

                        <div class="mb-4 position-relative">
                            <textarea asp-for="NoiDung" rows="6" class="form-control px-3 py-2" placeholder=" " aria-labelledby="noidung-label"></textarea>
                            <label for="NoiDung" id="noidung-label" class="lienhe-floating-label">Nội Dung Liên Hệ</label>
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn lienhe-btn-primary w-100 py-2">
                            Gửi Liên Hệ <i class="fas fa-paper-plane ms-2"></i>
                        </button>
                    </form>
                </div>

                <!-- Thông Tin Liên Hệ -->
                <div class="col-lg-5" id="lienhe-info">
                    <div class="bg-light p-4 rounded shadow-sm h-100">
                        <h3 class="fs-3 fw-semibold mb-4">Thông Tin Liên Hệ</h3>

                        <div class="d-flex flex-column gap-4">
                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3 lienhe-icon-container">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div>
                                    <h4 class="fw-medium mb-1">Địa Chỉ</h4>
                                    <p class="text-muted">280 Cao Lỗ, Quận 8, Thành phố Hồ Chí Minh, Việt Nam</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3 lienhe-icon-container">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div>
                                    <h4 class="fw-medium mb-1">Số Điện Thoại</h4>
                                    <p class="text-muted">+84 85 346 1030</p>
                                    <p class="text-muted">+84 85 346 1031 (Đặt phòng)</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3 lienhe-icon-container">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div>
                                    <h4 class="fw-medium mb-1">Email</h4>
                                    <p class="text-muted">dinhn6666@gmail.com</p>
                                    <p class="text-muted">reservations@thiemdinhhotel.com</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3 lienhe-icon-container">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div>
                                    <h4 class="fw-medium mb-1">Giờ Lễ Tân</h4>
                                    <p class="text-muted">24 giờ / 7 ngày</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Phần bản đồ -->
    <section class="py-5 bg-light">
        <div class="container-fluid padding-side">
            <h2 class="fs-2 fw-bold text-center mb-4">Vị Trí Của Chúng Tôi</h2>
            <div class="lienhe-map-container shadow rounded overflow-hidden">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.961580255408!2d106.67510897369529!3d10.7374445599143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752fad3fb62a95%3A0xa9576c84a879d1fe!2zMTgwIENhbyBM4buXLCBQaMaw4budbmcgNCwgUXXhuq1uIDgsIEjhu5MgQ2jDrSBNaW5oIDcwMDAwLCBWaWV0bmFt!5e0!3m2!1sen!2s!4v1751355725549!5m2!1sen!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="mt-4 row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="bg-white p-4 rounded shadow-sm">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-subway fs-4 text-primary me-2 lienhe-icon-container"></i>
                            <h3 class="fs-5 fw-semibold">Giao Thông Công Cộng</h3>
                        </div>
                        <p class="text-muted">Chúng tôi nằm gần trạm tàu điện ngầm Bến Thành (Tuyến 1) và nhiều điểm dừng xe buýt dọc đại lộ Nguyễn Huệ.</p>
                    </div>
                </div>

                <div class="col">
                    <div class="bg-white p-4 rounded shadow-sm">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-plane fs-4 text-primary me-2 lienhe-icon-container"></i>
                            <h3 class="fs-5 fw-semibold">Từ Sân Bay</h3>
                        </div>
                        <p class="text-muted">Sân bay Quốc tế Tân Sơn Nhất cách khách sạn 8km. Chuyến taxi mất khoảng 20-30 phút tùy vào tình hình giao thông.</p>
                    </div>
                </div>

                <div class="col">
                    <div class="bg-white p-4 rounded shadow-sm">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-car fs-4 text-primary me-2 lienhe-icon-container"></i>
                            <h3 class="fs-5 fw-semibold">Bãi Đỗ Xe</h3>
                        </div>
                        <p class="text-muted">Khách sạn cung cấp dịch vụ đỗ xe miễn phí cho khách. Có bãi đỗ xe đường phố giới hạn gần đó.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Phần FAQ -->
    <section class="py-5">
        <div class="container-fluid padding-side">
            <h2 class="fs-2 fw-bold text-center mb-5">Câu Hỏi Thường Gặp</h2>

            <div class="mx-auto" style="max-width: 48rem;">
                <div class="border rounded mb-3">
                    <button class="lienhe-faq-toggle w-100 d-flex justify-content-between align-items-center p-3 bg-light">
                        <h3 class="fs-5 fw-medium text-start">Chính sách hủy phòng của khách sạn là gì?</h3>
                        <i class="fas fa-chevron-down text-primary lienhe-icon-container"></i>
                    </button>
                    <div class="lienhe-faq-content p-3 border-top">
                        <p class="text-muted">Chúng tôi cho phép hủy phòng miễn phí trước 48 giờ so với ngày đến. Nếu hủy trong vòng 48 giờ, bạn sẽ chịu phí tương đương một đêm phòng.</p>
                    </div>
                </div>

                <div class="border rounded mb-3">
                    <button class="lienhe-faq-toggle w-100 d-flex justify-content-between align-items-center p-3 bg-light">
                        <h3 class="fs-5 fw-medium text-start">Khách sạn có cung cấp dịch vụ đưa đón sân bay không?</h3>
                        <i class="fas fa-chevron-down text-primary lienhe-icon-container"></i>
                    </button>
                    <div class="lienhe-faq-content p-3 border-top">
                        <p class="text-muted">Có, chúng tôi cung cấp dịch vụ đưa đón sân bay với một khoản phụ phí. Vui lòng liên hệ lễ tân ít nhất 24 giờ trước khi đến để sắp xếp.</p>
                    </div>
                </div>

                <div class="border rounded mb-3">
                    <button class="lienhe-faq-toggle w-100 d-flex justify-content-between align-items-center p-3 bg-light">
                        <h3 class="fs-5 fw-medium text-start">Thời gian nhận và trả phòng là khi nào?</h3>
                        <i class="fas fa-chevron-down text-primary lienhe-icon-container"></i>
                    </button>
                    <div class="lienhe-faq-content p-3 border-top">
                        <p class="text-muted">Thời gian nhận phòng từ 14:00 và trả phòng đến 12:00. Nhận phòng sớm hoặc trả phòng muộn tùy thuộc vào tình trạng phòng và có thể phát sinh phí.</p>
                    </div>
                </div>

                <div class="border rounded mb-3">
                    <button class="lienhe-faq-toggle w-100 d-flex justify-content-between align-items-center p-3 bg-light">
                        <h3 class="fs-5 fw-medium text-start">Bữa sáng có được bao gồm không?</h3>
                        <i class="fas fa-chevron-down text-primary lienhe-icon-container"></i>
                    </button>
                    <div class="lienhe-faq-content p-3 border-top">
                        <p class="text-muted">Bữa sáng được bao gồm trong giá phòng trừ khi có quy định khác. Chúng tôi phục vụ các món Việt Nam và quốc tế từ 6:30 đến 10:30 hàng ngày.</p>
                    </div>
                </div>

                <div class="border rounded mb-3">
                    <button class="lienhe-faq-toggle w-100 d-flex justify-content-between align-items-center p-3 bg-light">
                        <h3 class="fs-5 fw-medium text-start">Khách sạn có tiện nghi cho người khuyết tật không?</h3>
                        <i class="fas fa-chevron-down text-primary lienhe-icon-container"></i>
                    </button>
                    <div class="lienhe-faq-content p-3 border-top">
                        <p class="text-muted">Có, khách sạn được thiết kế với lối đi cho xe lăn, thang máy và phòng dành riêng cho người khuyết tật. Vui lòng thông báo yêu cầu đặc biệt khi đặt phòng.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
<script>
    // JavaScript cho FAQ toggle
    document.querySelectorAll('.lienhe-faq-toggle').forEach(button => {
        button.addEventListener('click', () => {
            const content = button.nextElementSibling;
            content.classList.toggle('show');
            const icon = button.querySelector('i');
            icon.classList.toggle('fa-chevron-down');
            icon.classList.toggle('fa-chevron-up');
        });
    });
</script>
