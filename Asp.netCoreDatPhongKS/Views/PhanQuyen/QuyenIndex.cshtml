@model List<Asp.netCoreDatPhongKS.Models.Quyen>
@{
    ViewData["Title"] = "Quản lý quyền";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Quản lý quyền</h2>
    <a href="@Url.Action("CreateQuyen", "PhanQuyen")" class="btn btn-primary mb-3">Thêm quyền mới</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã quyền</th>
                <th>Tên quyền</th>
                <th>Mô tả</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quyen in Model)
            {
                <tr>
                    <td>@quyen.MaQuyen</td>
                    <td>@quyen.TenQuyen</td>
                    <td>@quyen.MoTa</td>
                    <td>
                        <a href="@Url.Action("EditQuyen", "PhanQuyen", new { quyenId = quyen.QuyenId })" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="@Url.Action("DeleteQuyen", "PhanQuyen", new { quyenId = quyen.QuyenId })" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Index", "PhanQuyen")" class="btn btn-secondary">Quay lại</a>
</div>