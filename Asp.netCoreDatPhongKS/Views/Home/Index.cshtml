<div class="home-container">
    <div class="intro-section">
        <h1 style="margin:10px;">Hotel Thiềm Định<br>Nơi nghỉ dưỡng an lành – Trải nghiệm đẳng cấp Hotel ⭐⭐⭐⭐⭐</h1>
        <a asp-controller="LoaiPhong" asp-action="Index" class="btn btn-primary" style="margin-left: 10px !important;">Khám phá loại phòng</a>

    </div>

    <div class="availability-form">
        <h2>Tìm kiếm phòng</h2>
        <form asp-controller="Home" asp-action="TimKiemPhong" method="post">
            <label>Ngày nhận phòng</label>
            <input type="date" name="checkin" required />

            <label>Ngày trả</label>
            <input type="date" name="checkout" required />

            <label>Số phòng</label>
            <input type="number" name="rooms" min="1" value="1" required />

            <label>Số lượng khách:</label>
            <input type="number" name="soKhach" min="1" value="1" />

            <button type="submit" class="check-button">Tìm kiếm</button>
        </form>


    </div>
</div>
