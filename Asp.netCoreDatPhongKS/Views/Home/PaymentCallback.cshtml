
@model Asp.netCoreDatPhongKS.Models.Payment.PaymentResponse

@{
    ViewData["Title"] = "Kết quả thanh toán";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }

        .payment-container {
            max-width: 600px;
            margin: 60px auto;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }

        .payment-success {
            border-left: 4px solid #10b981;
            animation: fadeIn 0.5s ease-in-out;
        }

        .payment-error {
            border-left: 4px solid #ef4444;
            animation: fadeIn 0.5s ease-in-out;
        }


        .payment-button {
            transition: all 0.3s ease;
        }

        .payment-button:hover {
            transform: translateY(-2px);
        }

        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background-color: #f59e0b;
            opacity: 0;
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="payment-container w-full bg-white rounded-lg overflow-hidden" data-aos="fade-up">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-6 text-white">
            <h3 class="text-2xl font-bold flex items-center">
                <i class="fas fa-receipt mr-3"></i>
                Kết quả thanh toán
            </h3>
        </div>

        <!-- Payment Content -->
        <div class="p-6">
            @if (Model.Success)
            {
                <!-- Success Case -->
                <div id="success-case" class="payment-success bg-white p-6 rounded-lg mb-6">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-check-circle text-green-500 text-2xl"></i>
                        </div>
                        <h4 class="text-xl font-semibold text-green-800">Thanh toán thành công!</h4>
                    </div>

                    <div class="space-y-3 text-gray-700">
                        <div class="flex items-start">
                            <i class="fas fa-credit-card text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Phương thức thanh toán:</strong> <span id="payment-method" class "font-medium">@Model.PaymentMethod</span></p>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-barcode text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Mã đơn hàng:</strong> <span id="order-id" class="font-medium">@Model.OrderId</span></p>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-exchange-alt text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Mã giao dịch:</strong> <span id="transaction-id" class="font-medium">@Model.TransactionId</span></p>
                        </div>
                         <div class="flex items-start">
                            <i class="fas fa-money-bill-wave text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Số tiền:</strong> <span id="amount" class="font-medium text-green-600">@String.Format("{0:N0}", Model.Amount) VNĐ</span></p>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-align-left text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Mô tả:</strong> <span id="order-description" class="font-medium">@Model.OrderDescription</span></p>
                        </div>
                        @if (Model.PaymentMethod == "VNPay")
                        {
                            <div id="response-code-container" class="flex items-start">
                                <i class="fas fa-code text-gray-400 mt-1 mr-3 w-5"></i>
                                <p><strong class="text-gray-600">Mã phản hồi:</strong> <span id="response-code" class="font-medium">@Model.VnPayResponseCode</span></p>
                            </div>
                        }
                        else if (Model.PaymentMethod == "MoMo")
                        {
                            <div id="response-code-container" class="flex items-start">
                                <i class="fas fa-code text-gray-400 mt-1 mr-3 w-5"></i>
                                <p><strong class="text-gray-600">Mã phản hồi:</strong> <span id="response-code" class="font-medium">@Model.MoMoResponseCode</span></p>
                            </div>
                        }
                        <div class="flex items-start">
                            <i class="fas fa-info-circle text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Thông báo:</strong> <span id="notification" class="font-medium">@TempData["ThongBao"]</span></p>
                        </div>
                    </div>

                    <div id="confetti-container" class="relative overflow-hidden h-0"></div>
                </div>
            }
            else
            {
                <!-- Error CaseA -->
                <div id="error-case" class="payment-error bg-white p-6 rounded-lg mb-6">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mr-4">
                            <i class="fas fa-times-circle text-red-500 text-2xl"></i>
                        </div>
                        <h4 class="text-xl font-semibold text-red-800">Thanh toán thất bại!</h4>
                    </div>

                    <div class="space-y-3 text-gray-700">
                        <div class="flex items-start">
                            <i class="fas fa-credit-card text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Phương thức thanh toán:</strong> <span id="error-payment-method" class="font-medium">@Model.PaymentMethod</span></p>
                        </div>
                        @if (Model.PaymentMethod == "VNPay")
                        {
                            <div id="error-response-code-container" class="flex items-start hidden">
                                <i class="fas fa-code text-gray-400 mt-1 mr-3 w-5"></i>
                                <p><strong class="text-gray-600">Mã phản hồi:</strong> <span id="error-response-code" class="font-medium">@Model.VnPayResponseCode</span></p>
                            </div>
                        }
                        else if (Model.PaymentMethod == "MoMo")
                        {
                            <div id="error-response-code-container" class="flex items-start hidden">
                                <i class="fas fa-code text-gray-400 mt-1 mr-3 w-5"></i>
                                <p><strong class="text-gray-600">Mã phản hồi:</strong> <span id="error-response-code" class="font-medium">@Model.MoMoResponseCode</span></p>
                            </div>
                        }
                        <div class="flex items-start">
                            <i class="fas fa-info-circle text-gray-400 mt-1 mr-3 w-5"></i>
                            <p><strong class="text-gray-600">Thông báo:</strong> <span id="error-notification" class="font-medium">@TempData["ThongBao"]</span></p>
                        </div>
                    </div>
                </div>
            }

            <!-- Action Button -->
            <a href="@Url.Action("Index", "Home")" class="payment-button w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 px-4 rounded-lg flex items-center justify-center mt-6">
                <i class="fas fa-home mr-2"></i>
                Về trang chủ
            </a>
        </div>

        <!-- Footer -->
        <div class="bg-gray-50 p-4 text-center text-gray-500 text-sm">
            <p>Cảm ơn bạn đã sử dụng dịch vụ của Khách sạn Thiềm Định</p>
            <div class="flex justify-center space-x-4 mt-2">
                <a href="#" class="text-indigo-500 hover:text-indigo-700"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-indigo-500 hover:text-indigo-700"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-indigo-500 hover:text-indigo-700"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Initialize AOS
        AOS.init({ duration: 800 });

        // Initialize page based on payment status
        document.addEventListener('DOMContentLoaded', function () {
            const successEl = document.getElementById('success-case');
            const errorEl = document.getElementById('error-case');

            @if (Model.Success)
            {
                @:successEl.classList.remove('hidden');
                @:errorEl.classList.add('hidden');
                @:createConfetti();
            }
            else
            {
                @:successEl.classList.add('hidden');
                @:errorEl.classList.remove('hidden');
            }
        });  
    </script>
</body>
</html>
