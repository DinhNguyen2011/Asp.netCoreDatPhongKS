@model Asp.netCoreDatPhongKS.Models.ViewModels.ThongtindatPhongViewModel

@{
    ViewData["Title"] = "Đặt phòng";
    Layout = null;
    var phong = Model.Phong;
    decimal tongGia = (phong?.GiaPhong1Dem ?? 0) * Model.SoDem;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt phòng</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .room-card {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
        }

            .room-card:hover {
                transform: translateY(-2px);
            }

        .input-focus:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
        }

        .btn-primary {
            background-color: #4f46e5;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #4338ca;
                transform: translateY(-1px);
            }

        .btn-secondary {
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                transform: translateY(-1px);
            }
    </style>
</head>
<body class="gradient-bg min-h-screen py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-xl shadow-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-indigo-600 px-6 py-4">
                <h1 class="text-2xl font-bold text-white">
                    <i class="fas fa-hotel mr-2"></i> Thông tin đặt phòng
                </h1>
            </div>

            <!-- Room Info Card -->
            <div class="room-card bg-white rounded-lg m-6 p-6 border border-gray-200">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">
                            <i class="fas fa-door-open text-indigo-500 mr-2"></i>
                            Phòng @phong?.SoPhong - @phong?.LoaiPhong?.TenLoai
                        </h2>
                        <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="flex items-center">
                                <i class="fas fa-calendar-check text-indigo-500 mr-2"></i>
                                <span class="text-gray-700">Ngày nhận: @Model.Checkin.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-calendar-times text-indigo-500 mr-2"></i>
                                <span class="text-gray-700">Ngày trả: @Model.Checkout.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-moon text-indigo-500 mr-2"></i>
                                <span class="text-gray-700">Số đêm: @Model.SoDem</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-money-bill-wave text-indigo-500 mr-2"></i>
                                <span class="text-gray-700">Giá mỗi đêm: @String.Format("{0:N0}", phong?.GiaPhong1Dem) VNĐ</span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 md:mt-0">
                        <div class="bg-indigo-50 rounded-lg p-4 text-center">
                            <p class="text-sm text-indigo-600 font-medium">Tổng tiền</p>
                            <p class="text-2xl font-bold text-indigo-700">@String.Format("{0:N0}", tongGia) VNĐ</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Form -->
            <form asp-action="DatPhong" method="post" onsubmit="return validateBookingForm();" class="px-6 pb-6">
                <input type="hidden" asp-for="PhongId" />
                <input type="hidden" asp-for="SoDem" />

                <h3 class="text-lg font-medium text-gray-900 mb-4">
                    <i class="fas fa-user-circle text-indigo-500 mr-2"></i> Thông tin khách hàng
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- Personal Info -->
                    <div class="space-y-4">
                        <div>
                            <label asp-for="HoTen" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-user text-indigo-500 mr-1"></i> Họ tên
                            </label>
                            <input asp-for="HoTen" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required />
                            <span asp-validation-for="HoTen" class="text-red-500 text-xs"></span>
                        </div>

                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-envelope text-indigo-500 mr-1"></i> Email
                            </label>
                            <input asp-for="Email" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required />
                            <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                        </div>

                        <div>
                            <label asp-for="SoDienThoai" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-phone text-indigo-500 mr-1"></i> Số điện thoại
                            </label>
                            <input asp-for="SoDienThoai" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required />
                            <span asp-validation-for="SoDienThoai" class="text-red-500 text-xs"></span>
                        </div>
                    </div>

                    <!-- Additional Info -->
                    <div class="space-y-4">
                        <div>
                            <label asp-for="DiaChi" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-map-marker-alt text-indigo-500 mr-1"></i> Địa chỉ
                            </label>
                            <input asp-for="DiaChi" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required />
                            <span asp-validation-for="DiaChi" class="text-red-500 text-xs"></span>
                        </div>

                        <div>
                            <label asp-for="Cccd" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-id-card text-indigo-500 mr-1"></i> CCCD
                            </label>
                            <input asp-for="Cccd" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required />
                            <span asp-validation-for="Cccd" class="text-red-500 text-xs"></span>
                        </div>

                        <div>
                            <label asp-for="GhiChu" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-sticky-note text-indigo-500 mr-1"></i> Ghi chú
                            </label>
                            <input asp-for="GhiChu" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" />
                            <span asp-validation-for="GhiChu" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                </div>

                <!-- Date and Time Selection -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="Checkin" class="block text-sm font-medium text-gray-700 mb-1">
                            <i class="fas fa-calendar-check text-indigo-500 mr-1"></i> Ngày nhận (giờ/phút)
                        </label>
                        <input asp-for="Checkin" type="datetime-local" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required min="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                        <span asp-validation-for="Checkin" class="text-red-500 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="Checkout" class="block text-sm font-medium text-gray-700 mb-1">
                            <i class="fas fa-calendar-times text-indigo-500 mr-1"></i> Ngày trả (giờ/phút)
                        </label>
                        <input asp-for="Checkout" type="datetime-local" class="w-full px-4 py-2 rounded-lg border border-gray-300 input-focus focus:outline-none" required min="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                        <span asp-validation-for="Checkout" class="text-red-500 text-xs"></span>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-credit-card text-indigo-500 mr-1"></i> Phương thức thanh toán
                    </label>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div class="flex items-center">
                            <input type="radio" id="vnpay" name="paymentMethod" value="VNPay" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" required>
                            <label for="vnpay" class="ml-3 block text-sm font-medium text-gray-700">
                                <img src="https://vinadesign.vn/uploads/thumbnails/800/2023/05/vnpay-logo-vinadesign-25-12-59-16.jpg" alt="VNPay" class="h-8 ml-2">
                            </label>
                        </div>
                        <div class="flex items-center">
                            <input type="radio" id="momo" name="paymentMethod" value="MoMo" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" required>
                            <label for="momo" class="ml-3 block text-sm font-medium text-gray-700">
                                <img src="https://upload.wikimedia.org/wikipedia/vi/f/fe/MoMo_Logo.png" alt="MoMo" class="h-8 ml-2">
                            </label>
                        </div>
                    </div>
                    <span id="paymentMethodError" class="text-red-500 text-xs hidden">Vui lòng chọn phương thức thanh toán.</span>
                </div>

                <!-- Terms and Conditions -->
                <div class="mb-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">
                        <i class="fas fa-file-alt text-indigo-500 mr-2"></i> Điều khoản và Nội quy
                    </h3>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-sm text-gray-700 mb-2">
                            <strong>Điều khoản và Nội quy của Khách sạn Thiềm Định:</strong>
                        </p>
                        <ul class="text-sm text-gray-700 list-disc list-inside">
                            <li>Khách hàng phải cung cấp thông tin chính xác và chịu trách nhiệm về các thông tin đã cung cấp.</li>
                            <li>Thanh toán phải được hoàn tất trước khi nhận phòng.</li>
                            <li>Không hút thuốc trong phòng và các khu vực cấm hút thuốc của khách sạn.</li>
                            <li>Tuân thủ giờ nhận phòng (14:00) và trả phòng (12:00) trừ khi có thỏa thuận trước.</li>
                            <li>Khách sạn không chịu trách nhiệm về mất mát tài sản cá nhân nếu không được gửi tại quầy lễ tân.</li>
                            <li>Hủy đặt phòng phải được thông báo trước 48 giờ để được hoàn tiền (nếu có).</li>
                        </ul>
                        <div class="mt-4 flex items-center">
                            <input type="checkbox" id="terms" name="terms" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" required>
                            <label for="terms" class="ml-2 block text-sm font-medium text-gray-700">
                                Tôi đồng ý với <a href="#" class="text-indigo-500 hover:underline">điều khoản và điều kiện</a> của khách sạn.
                            </label>
                        </div>
                        <span id="termsError" class="text-red-500 text-xs hidden">Vui lòng đồng ý với điều khoản và điều kiện.</span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex flex-col sm:flex-row justify-end gap-4 mt-8">
                    <a href="@Url.Action("Index")" class="btn-secondary px-6 py-3 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 text-center font-medium">
                        <i class="fas fa-times mr-2"></i> Hủy
                    </a>
                    <button type="submit" class="btn-primary px-6 py-3 rounded-lg text-white font-medium">
                        <i class="fas fa-check-circle mr-2"></i> Đặt phòng và Thanh toán
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
    <script>
        function validateBookingForm() {
            const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked');
            const paymentError = document.getElementById('paymentMethodError');
            if (!paymentMethod) {
                paymentError.classList.remove('hidden');
                return false;
            } else {
                paymentError.classList.add('hidden');
            }

            const terms = document.getElementById('terms');
            const termsError = document.getElementById('termsError');
            if (!terms.checked) {
                termsError.classList.remove('hidden');
                return false;
            } else {
                termsError.classList.add('hidden');
            }

            return confirm('Bạn sẽ được chuyển đến cổng thanh toán ' + paymentMethod.value + '. Xác nhận đặt phòng?');
        }

        // Đặt giá trị mặc định cho Checkin và Checkout
        document.addEventListener('DOMContentLoaded', function () {
            const checkinInput = document.getElementById('Checkin');
            const checkoutInput = document.getElementById('Checkout');
            if (checkinInput && checkoutInput) {
                if (checkinInput.value === '') {
                    const now = new Date();
                    now.setMinutes(now.getMinutes() + 1); // Thêm 1 phút để tránh chọn thời gian quá khứ
                    checkinInput.value = now.toISOString().slice(0, 16); // Định dạng datetime-local (14:46 hôm nay)
                }
                if (checkoutInput.value === '') {
                    const tomorrow = new Date();
                    tomorrow.setDate(tomorrow.getDate() + 1);
                    tomorrow.setHours(12, 0, 0); // Mặc định 12:00 ngày mai
                    checkoutInput.value = tomorrow.toISOString().slice(0, 16);
                }
            }
        });
    </script>
</body>
</html>