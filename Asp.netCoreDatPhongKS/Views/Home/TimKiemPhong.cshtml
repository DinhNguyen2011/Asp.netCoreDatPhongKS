@model List<Asp.netCoreDatPhongKS.Models.ViewModels.PhongViewModel>

@{
    Layout = null;
    var checkin = Model.FirstOrDefault()?.Checkin ?? DateTime.Today;
    var checkout = Model.FirstOrDefault()?.Checkout ?? DateTime.Today.AddDays(1);
    int soDem = (checkout - checkin).Days;
    int soKhach = Model.FirstOrDefault()?.SoKhach ?? 1;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
    }

    .phongtk-wrapper {
        max-width: 1200px;
        margin: auto;
    }

    .phongtk-summary .card-header {
        background-color: #343a40 !important;
    }

    .phongtk-room-item {
        border-radius: 12px;
        overflow: hidden;
        background-color: #fff;
        height: 250px;
    }

    .phongtk-img-slider {
        max-height: 100%;
        height: 100%;
        overflow: hidden;
    }

    .phongtk-img-slider img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .phongtk-room-item .carousel,
    .phongtk-room-item .carousel-inner,
    .phongtk-room-item .carousel-item {
        height: 100%;
    }

    .phongtk-room-item .carousel-control-prev-icon,
    .phongtk-room-item .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
    }

    .phongtk-room-item .info-section {
        padding: 1.25rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        overflow: hidden;
    }

    .phongtk-room-item h5 {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .phongtk-room-item p {
        margin-bottom: 0.25rem;
        font-size: 1rem;
    }

    .phongtk-room-item .btn {
        border-radius: 25px;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
    }

    .phongtk-room-item .mo-ta-text {
        font-size: 0.875rem;
        max-height: 3.5rem;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="container phongtk-wrapper mt-4">
<div class="card mb-4 phongtk-summary">
    <div class="card-header text-white bg-dark">
        <h5 class="mb-0">Thông tin tìm kiếm</h5>
    </div>
    <div class="card-body">
        <p>
            <strong>Ngày nhận phòng:</strong> @checkin.ToString("dd/MM/yyyy HH:mm")<br />
            <span class="text-muted">Đây là thời gian bạn sẽ bắt đầu kỳ nghỉ tại khách sạn.</span>
        </p>
        <p>
            <strong>Ngày trả phòng:</strong> @checkout.ToString("dd/MM/yyyy HH:mm")<br />
            <span class="text-muted">Thời gian bạn dự kiến rời khỏi khách sạn.</span>
        </p>
        <p>
            <strong>Số đêm lưu trú:</strong> @soDem<br />
            <span class="text-muted">Tổng số đêm bạn sẽ ở lại khách sạn.</span>
        </p>
        <p>
            <strong>Số khách:</strong> @soKhach<br />
            <span class="text-muted">Tổng số người sẽ cùng lưu trú với bạn.</span>
        </p>
        <hr />
        <p class="mb-2"><em>Nếu bạn muốn thay đổi thông tin tìm kiếm như thời gian nhận/trả phòng hoặc số lượng khách, hãy bấm nút bên dưới để quay lại trang tìm kiếm.</em></p>
        <a class="btn btn-outline-dark mt-2" href="@Url.Action("Index", "Home")">🔄 Thay đổi tìm kiếm</a>
    </div>
</div>

    <h3 class="mb-4 text-center text-secondary">Danh sách phòng khả dụng</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Không có phòng phù hợp với yêu cầu.</div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="card mb-4 shadow-sm d-flex flex-row phongtk-room-item">
                <!-- Hình ảnh -->
                <div class="phongtk-img-slider position-relative" style="flex: 1; max-width: 50%;">
             <div id="carouselPhong@(item.Phong.PhongId)" class="carousel slide h-100" data-bs-interval="false">
                        <div class="carousel-inner h-100">
                            <div class="carousel-item active">
                                <img src="@Url.Content(item.Phong.HinhAnh ?? "~/images/default.jpg")" class="d-block w-100 h-100" />
                            </div>
                            @if (!string.IsNullOrEmpty(item.Phong.HinhAnh1))
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(item.Phong.HinhAnh1)" class="d-block w-100 h-100" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.Phong.HinhAnh2))
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(item.Phong.HinhAnh2)" class="d-block w-100 h-100" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.Phong.HinhAnh3))
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(item.Phong.HinhAnh3)" class="d-block w-100 h-100" />
                                </div>
                            }
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselPhong@(item.Phong.PhongId)" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselPhong@(item.Phong.PhongId)" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>



                </div>

                <!-- Thông tin -->
                <div class="info-section" style="flex: 1;">
                    <div>
                        <h5>@item.Phong.LoaiPhong?.TenLoai</h5>
                        <p class="text-muted mb-2">Sức chứa: @item.Phong.SoLuongKhach người</p>
                        <p class="mb-2">
                            <strong>Giá linh hoạt: @String.Format("{0:N0}", item.Phong.GiaPhong1Dem * soDem ?? 0) VNĐ / @soDem đêm</strong><br />
                          @*   <span class="fw-bold"></span>
                            <small class="text-muted"></small> *@
                        </p>
                        <strong class="text-muted mo-ta-text">@item.Phong.MoTa</strong><br />
                       <strong>Tiện ích:</strong> Wi-Fi, TV, Điều hòa, Nước nóng
                    </div>
                    <div class="d-flex justify-content-end mt-2">
                        <a href="@Url.Action("DatPhong", "Home", new {
                            phongId = item.Phong.PhongId,
                            checkin = item.Checkin.ToString("yyyy-MM-ddTHH:mm"),
                            checkout = item.Checkout.ToString("yyyy-MM-ddTHH:mm")
                        })"
                           class="btn btn-dark rounded-pill px-4">
                            Chọn phòng
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
