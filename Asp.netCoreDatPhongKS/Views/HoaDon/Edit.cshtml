@model Asp.netCoreDatPhongKS.Models.HoaDon
@{
    ViewData["Title"] = "Sửa hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa hóa đơn #@Model.MaHoaDon</h2>
<p>Nhân viên: @ViewData["Hoten"]</p>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaHoaDon" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="KhachHangId" class="control-label"></label>
        <select asp-for="KhachHangId" class="form-control" asp-items="@(new SelectList(ViewBag.KhachHangs, "KhachHangId", "HoTen", Model.KhachHangId))">
            <option value="">Chọn khách hàng</option>
        </select>
        <span asp-validation-for="KhachHangId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HinhThucThanhToan" class="control-label"></label>
        <select asp-for="HinhThucThanhToan" class="form-control" asp-items="@(new SelectList(ViewBag.HinhThucThanhToans))">
            <option value="">Chọn hình thức</option>
        </select>
        <span asp-validation-for="HinhThucThanhToan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="Chưa thanh toán">Chưa thanh toán</option>
            <option value="Đã thanh toán">Đã thanh toán</option>
            <option value="Hủy">Hủy</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label"></label>
        <textarea asp-for="GhiChu" class="form-control"></textarea>
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoTienConNo" class="control-label"></label>
        <input asp-for="SoTienConNo" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="SoTienConNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
