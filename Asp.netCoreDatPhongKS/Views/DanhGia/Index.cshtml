@model IEnumerable<Asp.netCoreDatPhongKS.Models.DanhGium>

@{
    ViewData["Title"] = "Danh sách đánh giá";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách đánh giá</h2>
    <div class="card mb-3">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Số phòng</th>
                        <th>Dịch vụ</th>
                        <th>Phiếu đặt phòng</th>
                        <th>Đơn hàng dịch vụ</th>
                        <th>Điểm</th>
                        <th>Nội dung</th>
                        <th>Ngày đánh giá</th>
                        <th>Tài khoản</th>
                        @* <th>Hành động</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.Phong?.SoPhong ?? "Không có")</td>
                            <td>@(item.DichVu?.TenDichVu ?? "Không có")</td>
                            <td>@(item.PhieuDatPhong?.PhieuDatPhongId.ToString() ?? "Không có")</td>
                            <td>@(item.DonHangDichVu?.MaDonHangDv.ToString() ?? "Không có")</td>
                            <td>@(item.Diem?.ToString() ?? "Không có")</td>
                            <td>@item.NoiDung</td>
                            <td>@(item.NgayDanhGia?.ToString("dd/MM/yyyy") ?? "Không có")</td>
                            <td>@item.TaiKhoan.Hoten</td>
                            @* <td class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@item.DanhGiaId" class="btn btn-warning btn-sm text-dark fs-6">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.DanhGiaId" class="btn btn-danger btn-sm fs-6">Xóa</a>
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>