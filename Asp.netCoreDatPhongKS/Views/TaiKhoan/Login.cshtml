@model Asp.netCoreDatPhongKS.Models.TaiKhoan

@{
    ViewData["Title"] = "Đăng nhập";

}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4">ĐĂNG NHẬP</h3>
        @if (ViewBag.LoginCheck != null)
        {
            <div class="alert alert-danger text-center mb-3">
                @ViewBag.LoginCheck
            </div>
        }
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3" style="border-radius: 20px;">ĐĂNG NHẬP</button>

            <div class="text-center mb-2 text-muted">Hoặc đăng nhập với</div>

            <div class="d-flex justify-content-between mb-3">
                <a href="javascript:void(0);" class="btn btn-light border rounded-pill px-3">
                    <img src="~/assets/img/icons/google.png" class="me-2" alt="Google" width="20"> Google
                </a>
                <a href="javascript:void(0);" class="btn btn-light border rounded-pill px-3">
                    <img src="~/assets/img/icons/facebook.png" class="me-2" alt="Facebook" width="20"> Facebook
                </a>
            </div>

            <div class="text-center">
                <span>Bạn chưa có tài khoản?</span>
                <a href="/TaiKhoan/Register" class="fw-bold text-primary text-decoration-none">Đăng ký ngay</a>
            </div>

            <div class="text-center mt-2">
                <a href="/TaiKhoan/ForgotPassword" class="text-danger text-decoration-none">Quên mật khẩu?</a>
            </div>
        </form>
    </div>
</div>

