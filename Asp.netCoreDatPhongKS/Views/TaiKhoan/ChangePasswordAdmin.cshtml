@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="container-fluid td-padding-side" data-aos="fade-up">
    <h2 class="display-4 text-center fw-normal mb-5">@ViewData["Title"]</h2>

    @if (TempData["ChangePasswordSuccess"] != null)
    {
        <div class="alert alert-success" data-aos="fade-up">
            @TempData["ChangePasswordSuccess"]
        </div>
    }
    @if (TempData["ChangePasswordError"] != null)
    {
        <div class="alert alert-danger" data-aos="fade-up">
            @TempData["ChangePasswordError"]
        </div>
    }

    <div class="card change-password-container">
        <div class="card-body">
            <h5 class="card-title">Đổi mật khẩu</h5>
            <form asp-action="ChangePassword" method="post">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label">Mật khẩu hiện tại</label>
                    <input type="password" id="currentPassword" name="currentPassword" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">Mật khẩu mới</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" required minlength="6" />
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required minlength="6" />
                </div>
                <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                <a asp-action="Profile" class="btn btn-outline-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>

<style>
    .change-password-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>