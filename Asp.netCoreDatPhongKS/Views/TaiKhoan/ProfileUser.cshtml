@model Asp.netCoreDatPhongKS.Models.TaiKhoan

@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = null; 
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-center mb-8">@ViewData["Title"]</h2>

        @if (TempData["ProfileSuccess"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" data-aos="fade-up">
                @TempData["ProfileSuccess"]
            </div>
        }
        @if (TempData["ProfileError"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" data-aos="fade-up">
                @TempData["ProfileError"]
            </div>
        }

        <div class="bg-white rounded-lg shadow p-6">
            <h5 class="text-xl font-semibold mb-4">Thông tin tài khoản</h5>
            <form asp-action="Profile" method="post" enctype="multipart/form-data" class="space-y-4">
                <div>
                    <label asp-for="Email" class="block font-medium mb-1">Email</label>
                    <input asp-for="Email" class="w-full border rounded px-3 py-2 bg-gray-100" readonly />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Hoten" class="block font-medium mb-1">Họ tên</label>
                    <input asp-for="Hoten" class="w-full border rounded px-3 py-2" required />
                    <span asp-validation-for="Hoten" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label for="hinhAnh" class="block font-medium mb-1">Ảnh đại diện</label>
                    <input type="file" id="hinhAnh" name="hinhAnh" class="w-full border rounded px-3 py-2" accept=".jpg,.jpeg,.png,.gif" />
                    <span class="text-red-500 text-sm" id="hinhAnhError"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <div>
                        <label class="block font-medium mb-1">Ảnh hiện tại</label>
                        <img src="@Model.HinhAnh" alt="Ảnh đại diện" class="w-32 h-auto rounded shadow" />
                    </div>
                }
                <div>
                    <label class="block font-medium mb-1">Preview ảnh mới</label>
                    <img id="imagePreview" src="" alt="Preview" class="w-32 h-auto rounded shadow hidden" />
                </div>
                <!-- Hidden fields -->
                <input type="hidden" asp-for="TaiKhoanId" />
                <input type="hidden" asp-for="VaiTroId" />
                <input type="hidden" asp-for="TrangThai" />
                <input type="hidden" asp-for="MatKhau" />

                <div class="flex flex-wrap gap-2 mt-4">
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Cập nhật</button>
                    <a asp-action="ChangePassword" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Đổi mật khẩu</a>
                    <a asp-action="Index" asp-controller="Home" class="border border-gray-400 text-gray-700 px-4 py-2 rounded hover:bg-gray-200">Quay lại</a>
                </div>
            </form>
        </div>
    </div>

    <!-- JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/profile-user.js"></script>
</body>
</html>
