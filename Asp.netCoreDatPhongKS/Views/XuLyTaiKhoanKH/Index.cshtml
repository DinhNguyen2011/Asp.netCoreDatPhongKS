@model IEnumerable<Asp.netCoreDatPhongKS.Models.PhieuDatPhong>
@{
    ViewData["Title"] = "Phiếu đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid td-padding-side" data-aos="fade-up">
    <h2 class="display-4 text-center fw-normal mb-5">@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" data-aos="fade-up">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" data-aos="fade-up">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info" data-aos="fade-up">
            Bạn chưa có phiếu đặt phòng nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã phiếu</th>
                        <th>Ngày đặt</th>
                        <th>Ngày nhận</th>
                        <th>Ngày trả</th>
                        <th>Phòng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var phieu in Model)
                    {
                        <tr>
                            <td>@phieu.MaPhieu</td>
                            <td>@phieu.NgayDat?.ToString("dd/MM/yyyy")</td>
                            <td>@phieu.NgayNhan?.ToString("dd/MM/yyyy")</td>
                            <td>@phieu.NgayTra?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @foreach (var chiTiet in phieu.ChiTietPhieuPhongs)
                                {
                                    <div>@chiTiet.Phong?.SoPhong (@chiTiet.Phong?.LoaiPhong?.TenLoai)</div>
                                }
                            </td>
                            <td>@phieu.TongTien?.ToString("N0") VNĐ</td>
                            <td>@phieu.TrangThai</td>
                            <td>
                                <a asp-action="XemPhieuDatPhong" asp-route-id="@phieu.PhieuDatPhongId" class="btn btn-info btn-sm">Xem</a>
                                @if (phieu.NgayNhan >= DateTime.Now)
                                {
                                    <form asp-action="CancelBooking" method="post" style="display:inline;">
                                        <input type="hidden" name="phieuDatPhongId" value="@phieu.PhieuDatPhongId" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn hủy phiếu này?')">Hủy</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


    <link href="~/css/profile-user.css" rel="stylesheet" />



    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>AOS.init({ duration: 800 });</script>
