@model IEnumerable<Asp.netCoreDatPhongKS.Models.PhieuDatPhong>

@{
    ViewData["Title"] = "Phiếu đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/indexpdp.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container-fluid user-pdp-container mt-4 mb-5" data-aos="fade-up" >
  @*   <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1> *@

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" data-aos="fade-up">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" data-aos="fade-up">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info" data-aos="fade-up">
            <i class="bi bi-info-circle me-2"></i>Bạn chưa có phiếu đặt phòng nào.
        </div>
    }
    else
    {
        <div class="user-pdp-table-wrapper">
            <div class="table-responsive" data-aos="fade-up">
                <table class="table table-hover align-middle text-center" ">
                    <thead class="table-light">
                        <tr>
                            <th>Mã phiếu</th>
                            <th>Ngày nhận</th>
                            <th>Ngày trả</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var phieu in Model)
                        {
                            <tr>
                                <td>@phieu.MaPhieu</td>
                                <td>@phieu.NgayNhan?.ToString("dd/MM/yyyy")</td>
                                <td>@phieu.NgayTra?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="XemPhieuDatPhong"
                                       asp-route-id="@phieu.PhieuDatPhongId"
                                       class="btn btn-primary btn-sm user-pdp-btn-icon"
                                       data-bs-toggle="tooltip"
                                       title="Xem phiếu đặt phòng">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>

                                    @if (phieu.NgayNhan >= DateTime.Now &&
                                                                phieu.TinhTrangSuDung == "Chờ xử lý" &&
                                                                phieu.TinhTrangSuDung != "Đã check-out" &&
                                                                phieu.TinhTrangSuDung != "Đã hủy" &&
                                                                phieu.TrangThai != "Đã check-in")
                                    {
                                        <form asp-action="CancelBooking" method="post" style="display:inline;">
                                            <input type="hidden" name="phieuDatPhongId" value="@phieu.PhieuDatPhongId" />
                                            <button type="submit"
                                                    class="btn btn-danger btn-sm user-pdp-btn-icon"
                                                    data-bs-toggle="tooltip"
                                                    title="Hủy phiếu đặt phòng"
                                                    onclick="return confirm('Bạn có chắc muốn hủy phiếu này?')">
                                                <i class="bi bi-x-circle-fill"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<!-- Script -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    AOS.init({ duration: 800 });

    // Khởi tạo tooltip
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    const tooltipList = [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el));
</script>
