@model IEnumerable<Asp.netCoreDatPhongKS.Models.DonHangDichVu>

@{
    ViewData["Title"] = "Dịch vụ đã sử dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Icon Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link href="~/css/donhang-dichvu.css" rel="stylesheet" />
<style>
    .donhangdv-container {
        padding: 20px;
    }

    .donhangdv-table-wrapper {
        max-width: 1000px;
        margin: 0 auto;
    }

    .donhangdv-table th,
    .donhangdv-table td {
        padding: 10px;
        vertical-align: top;
        font-size: 0.95rem;
    }

    .donhangdv-alert {
        max-width: 800px;
        margin: 0 auto 20px auto;
    }

    .donhangdv-table .text-end {
        text-align: right;
    }

    .donhangdv-table .text-center {
        text-align: center;
    }

</style>
<div class="donhangdv-container container-fluid td-padding-side" data-aos="fade-up">
    <h2 class="display-4 text-center fw-normal mb-5">@ViewData["Title"]</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger donhangdv-alert">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info donhangdv-alert">
            Bạn chưa sử dụng dịch vụ nào.
        </div>
    }
    else
    {
        <div class="table-responsive donhangdv-table-wrapper">
            <table class="table table-bordered table-striped table-sm donhangdv-table">
                <thead class="table-light">
                    <tr>
                        <th>Ngày đặt</th>
                        <th>Dịch vụ</th>
                        <th>Tổng tiền</th>
                        @* <th>Trạng thái</th> *@
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donHang in Model)
                    {
                        <tr>
                            <td>@donHang.NgayDat?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @foreach (var chiTiet in donHang.ChiTietDonHangDichVus)
                                {
                                    <div>
                                        @chiTiet.DichVu.TenDichVu (@chiTiet.SoLuong) - @chiTiet.ThanhTien?.ToString("N0") VNĐ
                                    </div>
                                }
                            </td>
                            <td class="fw-semibold text-danger">
                                @donHang.ChiTietDonHangDichVus.Sum(ct => ct.ThanhTien)?.ToString("N0") VNĐ
                            </td>
                            @* <td>@donHang.TrangThai</td> *@
                            <td class="text-center">
                                @if (donHang.TrangThai == "Đã thanh toán")
                                {
                                    <a asp-controller="DanhGia" asp-action="DichVu" asp-route-donHangDichVuId="@donHang.MaDonHangDv"
                                       class="btn btn-outline-warning btn-sm" title="Đánh giá">
                                        <i class="bi bi-star-fill"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


<!-- Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init({ duration: 800 });</script>
