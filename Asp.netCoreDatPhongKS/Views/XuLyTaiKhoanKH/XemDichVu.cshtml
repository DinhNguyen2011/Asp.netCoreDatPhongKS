@model IEnumerable<Asp.netCoreDatPhongKS.Models.DonHangDichVu>
@{
    ViewData["Title"] = "Dịch vụ đã sử dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid td-padding-side" data-aos="fade-up">
    <h2 class="display-4 text-center fw-normal mb-5">@ViewData["Title"]</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" data-aos="fade-up">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info" data-aos="fade-up">
            Bạn chưa sử dụng dịch vụ nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt</th>
                        <th>Dịch vụ</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donHang in Model)
                    {
                        <tr>
                            <td>@donHang.MaDonHangDv</td>
                            <td>@donHang.NgayDat?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @foreach (var chiTiet in donHang.ChiTietDonHangDichVus)
                                {
                                    <div>@chiTiet.DichVu.TenDichVu (x@chiTiet.SoLuong) - @chiTiet.ThanhTien?.ToString("N0") VNĐ</div>
                                }
                            </td>
                            <td>@donHang.ChiTietDonHangDichVus.Sum(ct => ct.ThanhTien)?.ToString("N0") VNĐ</td>
                            <td>@donHang.TrangThai</td>
                            <td>@donHang.GhiChu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


