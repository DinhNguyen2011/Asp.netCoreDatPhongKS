@model Asp.netCoreDatPhongKS.Models.ViewModels.TaiKhoanViewModel
@{
    ViewData["Title"] = "Thêm tài khoản mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Thêm tài khoản mới</h2>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <form asp-action="Create" asp-controller="QuanLyTaiKhoan" method="post">
        <div class="form-group">
            <label asp-for="VaiTroId">Vai trò</label>
            <select asp-for="VaiTroId" class="form-control" onchange="toggleAdditionalFields(this)" required>
                <option value="">-- Chọn vai trò --</option>
                <option value="3">Khách hàng</option>
                <option value="2">Nhân viên/Lễ tân</option>
            </select>
            <span asp-validation-for="VaiTroId" class="text-danger"></span>
        </div>
        <h4>Thông tin tài khoản</h4>
        <div class="form-group">
            <label asp-for="TaiKhoan.Email">Email</label>
            <input asp-for="TaiKhoan.Email" class="form-control" required />
            <span asp-validation-for="TaiKhoan.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MatKhau">Mật khẩu</label>
            <input asp-for="MatKhau" type="password" class="form-control" required />
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TaiKhoan.Hoten">Họ tên</label>
            <input asp-for="TaiKhoan.Hoten" class="form-control" required />
            <span asp-validation-for="TaiKhoan.Hoten" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TaiKhoan.TrangThai">Trạng thái</label>
            <select asp-for="TaiKhoan.TrangThai" class="form-control">
                <option value="true">Kích hoạt</option>
                <option value="false">Vô hiệu</option>
            </select>
            <span asp-validation-for="TaiKhoan.TrangThai" class="text-danger"></span>
        </div>

        <div id="additionalFields" style="display:none;">
            <h4 id="additionalFieldsTitle"></h4>
            <div class="form-group">
                <label asp-for="NhanVien.Cccd">CCCD</label>
                <input asp-for="NhanVien.Cccd" class="form-control" data-val-additional="true" />
                <span asp-validation-for="NhanVien.Cccd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.SoDienThoai">Số điện thoại</label>
                <input asp-for="NhanVien.SoDienThoai" class="form-control" data-val-additional="true" />
                <span asp-validation-for="NhanVien.SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.DiaChi">Địa chỉ</label>
                <input asp-for="NhanVien.DiaChi" class="form-control" data-val-additional="true" />
                <span asp-validation-for="NhanVien.DiaChi" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-success mt-3">Thêm</button>
        <a href="@Url.Action("Index", "QuanLyTaiKhoan")" class="btn btn-secondary mt-3">Quay lại</a>
    </form>
</div>

    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleAdditionalFields(select) {
            var additionalFields = document.getElementById('additionalFields');
            var additionalFieldsTitle = document.getElementById('additionalFieldsTitle');
            var additionalInputs = additionalFields.querySelectorAll('input[data-val-additional]');

            if (select.value == '2' || select.value == '3') {
                additionalFields.style.display = 'block';
                additionalFieldsTitle.textContent = select.value == '2' ? 'Thông tin nhân viên' : 'Thông tin khách hàng';
                additionalInputs.forEach(input => {
                    input.required = true; // Required for both roles
                });
            } else {
                additionalFields.style.display = 'none';
                additionalInputs.forEach(input => {
                    input.required = false;
                });
            }
        }

        // Client-side validation for additional fields
        $(document).ready(function () {
            $.validator.addMethod("additionalRequired", function (value, element) {
                var vaiTroId = $('#VaiTroId').val();
                return vaiTroId != '2' && vaiTroId != '3' || (value && value.trim() != '');
            }, "Trường này là bắt buộc khi chọn vai trò Nhân viên hoặc Khách hàng.");

            $.validator.unobtrusive.adapters.addBool("additionalRequired");

            // Revalidate form when VaiTroId changes
            $('#VaiTroId').change(function () {
                $('form').validate().element('#NhanVien_Cccd');
                $('form').validate().element('#NhanVien_SoDienThoai');
                $('form').validate().element('#NhanVien_DiaChi');
            });
        });

        @if (TempData["Success"] != null)
        {
            @:toastr.success('@TempData["Success"]');
        }
        @if (TempData["Error"] != null)
        {
            @:toastr.error('@TempData["Error"]');
        }
    </script>
