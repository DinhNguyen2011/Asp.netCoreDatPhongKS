@model List<Asp.netCoreDatPhongKS.Models.TaiKhoan>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" /> *@

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0"><i class="fas fa-user-cog"></i> Quản lý tài khoản</h2>
        @* <a href="@Url.Action("Create", "QuanLyTaiKhoan")" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm tài khoản mới
        </a> *@
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]</div>
    }

    <div class="row g-3 align-items-center mb-4">

        <div class="form-group">
            <label for="vaiTroFilter">Lọc theo vai trò:</label>
            <select id="vaiTroFilter" class="form-control" onchange="filterAccounts()">
                @if (ViewBag.VaiTroId == null)
                {
                    <option value="" selected>Tất cả</option>
                }
                else
                {
                    <option value="">Tất cả</option>
                }

                @if (ViewBag.VaiTroId == 2)
                {
                    <option value="2" selected>Nhân viên</option>
                }
                else
                {
                    <option value="2">Nhân viên</option>
                }

                @if (ViewBag.VaiTroId == 3)
                {
                    <option value="3" selected>Khách hàng</option>
                }
                else
                {
                    <option value="3">Khách hàng</option>
                }
            </select>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                    @* <th>Trạng thái</th> *@
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var taiKhoan in Model)
                {
                    <tr>
                        <td>@taiKhoan.Hoten</td>
                        <td>@taiKhoan.Email</td>
                        <td>@taiKhoan.VaiTro?.TenVaiTro</td>
                       @*  <td>
                            @if (taiKhoan.TrangThai == true)
                            {
                                <span class="badge bg-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Vô hiệu</span>
                            }
                        </td> *@
                        <td>
                            <a href="@Url.Action("Edit", "QuanLyTaiKhoan", new { taiKhoanId = taiKhoan.TaiKhoanId })" class="btn btn-outline-warning btn-sm me-1" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", "QuanLyTaiKhoan", new { taiKhoanId = taiKhoan.TaiKhoanId })" class="btn btn-outline-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa tài khoản này?')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function filterAccounts() {
        var vaiTroId = document.getElementById('vaiTroFilter').value;
        var url = '@Url.Action("Index", "QuanLyTaiKhoan")';
        if (vaiTroId) {
            url += '?vaiTroId=' + vaiTroId;
        }
        window.location.href = url;
    }
</script>
