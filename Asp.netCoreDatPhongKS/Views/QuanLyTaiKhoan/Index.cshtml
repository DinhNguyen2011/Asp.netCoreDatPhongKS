@model List<Asp.netCoreDatPhongKS.Models.TaiKhoan>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Quản lý tài khoản</h2>

        <a href="@Url.Action("Create", "QuanLyTaiKhoan")" class="btn btn-primary mb-3">Thêm tài khoản mới</a>
    <div class="d-flex justify-content-between mb-3">

        <div class="form-group">
            <label for="vaiTroFilter">Lọc theo vai trò:</label>
            <select id="vaiTroFilter" class="form-control" onchange="filterAccounts()">
                @if (ViewBag.VaiTroId == null)
                {
                    <option value="" selected>Tất cả</option>
                }
                else
                {
                    <option value="">Tất cả</option>
                }

                @if (ViewBag.VaiTroId == 2)
                {
                    <option value="2" selected>Nhân viên</option>
                }
                else
                {
                    <option value="2">Nhân viên</option>
                }

                @if (ViewBag.VaiTroId == 3)
                {
                    <option value="3" selected>Khách hàng</option>
                }
                else
                {
                    <option value="3">Khách hàng</option>
                }
            </select>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var taiKhoan in Model)
            {
                <tr>
                    <td>@taiKhoan.Hoten</td>
                    <td>@taiKhoan.Email</td>
                    <td>@taiKhoan.VaiTro?.TenVaiTro</td>
                    <td>@(taiKhoan.TrangThai ==true ? "Kích hoạt" : "Vô hiệu")</td>
                    <td>
                        <a href="@Url.Action("Edit", "QuanLyTaiKhoan", new { taiKhoanId = taiKhoan.TaiKhoanId })" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="@Url.Action("Delete", "QuanLyTaiKhoan", new { taiKhoanId = taiKhoan.TaiKhoanId })" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function filterAccounts() {
        var vaiTroId = document.getElementById('vaiTroFilter').value;
        var url = '@Url.Action("Index", "QuanLyTaiKhoan")';
        if (vaiTroId) {
            url += '?vaiTroId=' + vaiTroId;
        }
        window.location.href = url;
    }
</script>
