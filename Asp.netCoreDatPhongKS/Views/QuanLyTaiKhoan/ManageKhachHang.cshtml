@model List<Asp.netCoreDatPhongKS.Models.TaiKhoan>
@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Quản lý khách hàng</h2>
    <a href="@Url.Action("CreateKhachHang", "QuanLyTaiKhoan")" class="btn btn-primary mb-3">Thêm khách hàng mới</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var taiKhoan in Model)
            {
                <tr>
                    <td>@taiKhoan.Hoten</td>
                    <td>@taiKhoan.Email</td>
                    <td>@(taiKhoan.TrangThai == true ? "Kích hoạt" : "Vô hiệu")</td>
                    <td>
                        <a href="@Url.Action("EditKhachHang", "QuanLyTaiKhoan", new { taiKhoanId = taiKhoan.TaiKhoanId })" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="@Url.Action("DeleteKhachHang", "QuanLyTaiKhoan", new { taiKhoanId = taiKhoan.TaiKhoanId })" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

