@model Asp.netCoreDatPhongKS.Models.TaiKhoan
@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Xóa khách hàng</h2>
    <div class="alert alert-warning">
        Bạn có chắc muốn xóa khách hàng <strong>@Model.Hoten (@Model.Email)</strong>? Hành động này không thể hoàn tác.
    </div>
    <form asp-action="DeleteKhachHangConfirmed" asp-controller="QuanLyTaiKhoan" asp-route-taiKhoanId="@Model.TaiKhoanId" method="post">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="@Url.Action("ManageKhachHang", "QuanLyTaiKhoan")" class="btn btn-secondary">Hủy</a>
    </form>
</div>