@model IEnumerable<Asp.netCoreDatPhongKS.Models.ChiTietPhieuPhong>

@{
    ViewData["Title"] = "Danh sách chi tiết phiếu phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    
}

<h2>Danh sách chi tiết phiếu phòng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Phiếu đặt phòng</th>
            <th>Phòng</th>
            <th>Đơn giá</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ChiTietId</td>
                <td>@(item.PhieuDatPhong?.MaPhieu ?? "N/A")</td>
                <td>@(item.Phong?.SoPhong ?? "N/A")</td>
                <td>@(item.DonGia?.ToString("C") ?? "N/A")</td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa chi tiết phiếu phòng này?');">
                        <input type="hidden" name="id" value="@item.ChiTietId" />
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>