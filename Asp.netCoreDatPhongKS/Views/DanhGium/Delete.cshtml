@model Asp.netCoreDatPhongKS.Models.DanhGium

@{
    ViewData["Title"] = "Xóa đánh giá";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa đánh giá</h2>

<h3>Bạn có chắc chắn muốn xóa đánh giá này?</h3>

<div>
    <h4>Thông tin đánh giá</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Phòng</dt>
        <dd class="col-sm-10">@(Model.Phong?.SoPhong ?? "N/A")</dd>
        <dt class="col-sm-2">Dịch vụ</dt>
        <dd class="col-sm-10">@(Model.DichVu?.TenDichVu ?? "N/A")</dd>
        <dt class="col-sm-2">Điểm</dt>
        <dd class="col-sm-10">@Model.Diem</dd>
        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.NoiDung</dd>
        <dt class="col-sm-2">Ngày đánh giá</dt>
        <dd class="col-sm-10">@Model.NgayDanhGia?.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Người đánh giá</dt>
        <dd class="col-sm-10">@(Model.TaiKhoan?.Hoten ?? "N/A")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DanhGiaId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>