@model Asp.netCoreDatPhongKS.Models.DanhGium

@{
    ViewData["Title"] = "Thêm đánh giá mới";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Thêm đánh giá mới</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PhongId" class="control-label"></label>
        <select asp-for="PhongId" class="form-control" asp-items="ViewBag.PhongId">
            <option value="">Không chọn phòng</option>
        </select>
        <span asp-validation-for="PhongId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DichVuId" class="control-label"></label>
        <select asp-for="DichVuId" class="form-control" asp-items="ViewBag.DichVuId">
            <option value="">Không chọn dịch vụ</option>
        </select>
        <span asp-validation-for="DichVuId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Diem" class="control-label"></label>
        <input asp-for="Diem" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Diem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NoiDung" class="control-label"></label>
        <textarea asp-for="NoiDung" class="form-control"></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaiKhoanId" class="control-label"></label>
        <select asp-for="TaiKhoanId" class="form-control" asp-items="ViewBag.TaiKhoanId"></select>
        <span asp-validation-for="TaiKhoanId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
