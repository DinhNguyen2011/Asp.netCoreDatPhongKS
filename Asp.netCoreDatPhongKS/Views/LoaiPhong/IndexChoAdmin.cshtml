@model IEnumerable<Asp.netCoreDatPhongKS.Models.LoaiPhong>

@{
    ViewData["Title"] = "Quản lý loại phòng";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Quản lý loại phòng</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm loại phòng mới</a>
</p>

<form asp-action="IndexChoAdmin" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="loai" class="mr-1">Tên loại:</label>
        <input type="text" name="loai" id="loai" class="form-control" value="@ViewBag.Loai" />
    </div>
    <div class="form-group mr-2">
        <label for="minGia" class="mr-1">Giá tối thiểu:</label>
        <input type="number" name="minGia" id="minGia" class="form-control" value="@ViewBag.MinGia" />
    </div>
    <div class="form-group mr-2">
        <label for="maxGia" class="mr-1">Giá tối đa:</label>
        <input type="number" name="maxGia" id="maxGia" class="form-control" value="@ViewBag.MaxGia" />
    </div>
    <div class="form-group mr-2">
        <label for="soNguoi" class="mr-1">Số người:</label>
        <input type="number" name="soNguoi" id="soNguoi" class="form-control" value="@ViewBag.SoNguoi" />
    </div>
    <button type="submit" class="btn btn-primary">Lọc</button>
</form>

<div class="table-responsive">
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Tên loại</th>
                <th class="d-none d-md-table-cell">Mô tả</th>
                <th>Giá cơ bản</th>
                <th>Số người</th>
                <th class="d-none d-md-table-cell">Ảnh demo</th>
                <th class="d-none d-md-table-cell">Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenLoai</td>
                    <td class="d-none d-md-table-cell text-truncate" style="max-width: 150px;" title="@item.MoTa">@item.MoTa</td>
                    <td>@item.GiaCoBan.ToString("C")</td>
                    <td>@item.SoluongNguoi</td>
                    <td class="d-none d-md-table-cell">
                        @if (!string.IsNullOrEmpty(item.AnhDemo) && item.AnhDemo != "/images/loaiphong/default.png")
                        {
                            <img src="@Url.Content(item.AnhDemo)" alt="Ảnh demo" style="max-width: 50px;" />
                        }
                    </td>
                    <td class="d-none d-md-table-cell">@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LoaiPhongId" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.LoaiPhongId" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .table-sm th, .table-sm td {
        padding: 0.5rem;
        font-size: 0.875rem;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>