@model Asp.netCoreDatPhongKS.Models.LoaiPhong

@{
    ViewData["Title"] = "Sửa thông tin loại phòng";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-pencil-square"></i> Sửa thông tin loại phòng</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="LoaiPhongId" />

                <div class="mb-3">
                    <label asp-for="TenLoai" class="form-label"></label>
                    <input asp-for="TenLoai" class="form-control" />
                    <span asp-validation-for="TenLoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label"></label>
                    <textarea asp-for="MoTa" class="form-control"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GiaCoBan" class="form-label"></label>
                    <input asp-for="GiaCoBan" type="number" value="0" class="form-control" />
                    <span asp-validation-for="GiaCoBan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoluongNguoi" class="form-label"></label>
                    <input asp-for="SoluongNguoi" type="number" value="0" class="form-control" />
                    <span asp-validation-for="SoluongNguoi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="anhDemoFile" class="form-label">Ảnh demo</label>
                    @if (!string.IsNullOrEmpty(Model.AnhDemo) && Model.AnhDemo != "/images/loaiphong/default.png")
                    {
                        <div class="mb-2">
                            <img src="@Url.Content(Model.AnhDemo)" alt="Ảnh demo hiện tại" style="max-width: 120px;" class="img-thumbnail" />
                        </div>
                    }
                    <input type="file" name="anhDemoFile" class="form-control" accept="image/*" />
                    <span class="text-danger">@ViewData.ModelState["anhDemoFile"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayTao" class="form-label"></label>
                    <input asp-for="NgayTao" class="form-control" readonly value="@Model.NgayTao?.ToString("dd/MM/yyyy")" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="IndexChoAdmin" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
