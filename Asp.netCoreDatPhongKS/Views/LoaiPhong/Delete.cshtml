@model Asp.netCoreDatPhongKS.Models.LoaiPhong

@{
    ViewData["Title"] = "Xóa loại phòng";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa loại phòng</h2>

<h3>Bạn có chắc chắn muốn xóa loại phòng này?</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <h4>Thông tin loại phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>
        <dt class="col-sm-2">Giá cơ bản</dt>
        <dd class="col-sm-10">@Model.GiaCoBan.ToString("C")</dd>
        <dt class="col-sm-2">Số người</dt>
        <dd class="col-sm-10">@Model.SoluongNguoi</dd>
        <dt class="col-sm-2">Ảnh demo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AnhDemo) && Model.AnhDemo != "/images/loaiphong/default.png")
            {
                <img src="@Url.Content(Model.AnhDemo)" alt="Ảnh demo" style="max-width: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LoaiPhongId" />
        <input type="submit" value="Xóa" class="btn btn-danger" @(Model.Phongs.Any() ? "disabled" : "") />
        <a asp-action="IndexChoAdmin" class="btn btn-secondary">Quay lại</a>
    </form>
</div>