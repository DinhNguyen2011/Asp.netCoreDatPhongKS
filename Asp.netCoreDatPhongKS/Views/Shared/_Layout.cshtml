                                </div>
                                <div class="modal-body">
                                    <!-- Form Đăng nhập -->
                                    <div id="loginForm">
                                        <div id="loginErrorMessage" class="alert alert-danger text-center mb-3" style="display:none;"></div>
                                        @if (TempData["RegisterSuccess"] != null)
                                        {
                                            <div class="alert alert-success text-center mb-3">@TempData["RegisterSuccess"]</div>
                                        }
                                        @if (ViewBag.LoginCheck != null)
                                        {
                                            <div class="alert alert-danger text-center mb-3">
                                                @Html.Raw(ViewBag.LoginCheck)
                                            </div>
                                        }
                                        <form action="/TaiKhoan/Login" method="post">
                                            <div class="form-group mb-3">
                                                <input name="Email" class="form-control rounded-pill px-4 py-2" />
                                            </div>
                                            <div class="form-group mb-3">
                                                <input name="MatKhau" type="password" class="form-control rounded-pill px-4 py-2" />
                                            </div>
                                            <div class="text-center mb-3">
                                                <button type="submit" class="btn btn-primary rounded-pill px-5 py-2"
                                                        style="background-color: #ff85a2; border: none; font-size: 17px;">
                                                    ĐĂNG NHẬP
                                                </button>
                                            </div>
                                            <div class="text-center mb-3 text-muted small">Hoặc đăng nhập với</div>
                                            <div class="d-flex justify-content-center gap-3 mb-3">
                                                <a href="javascript:void(0);" class="btn btn-light border rounded-pill px-5 py-1 d-flex align-items-center">
                                                    <img src="~/assets/img/icons/google.png" class="me-2" alt="Google" width="20"> Google
                                                </a>
                                                <a href="javascript:void(0);" class="btn btn-light border rounded-pill px-5 py-1 d-flex align-items-center">
                                                    <img src="~/assets/img/icons/facebook.png" class="me-2" alt="Facebook" width="20"> Facebook
                                                </a>
                                            </div>
                                            <div class="text-center small">
                                                <span>Bạn chưa có tài khoản?</span>
                                                <a href="javascript:void(0);" class="fw-bold text-primary text-decoration-none" onclick="showRegisterForm()">Đăng ký ngay</a>
                                            </div>
                                            <div class="text-center mt-2 small">
                                                <a href="/TaiKhoan/ForgotPassword" class="text-danger text-decoration-none">Quên mật khẩu?</a>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- Form Đăng ký -->
                                    <div id="registerForm" style="display: none;">
                                        <form action="/TaiKhoan/Register" method="post">
                                            @if (TempData["RegisterError"] != null)
                                            {
                                                <div class="alert alert-danger text-center mb-3">@TempData["RegisterError"]</div>
                                            }
                                            <div class="form-group mb-3">
                                                <input name="Email" class="form-control rounded-pill px-4 py-2" placeholder="Email" />
                                            </div>
                                            <div class="form-group mb-3">
                                                <input name="MatKhau" type="password" class="form-control rounded-pill px-4 py-2" placeholder="Mật khẩu" />
                                            </div>
                                            <div class="form-group mb-3">
                                                <input name="Hoten" class="form-control rounded-pill px-4 py-2" placeholder="Họ tên" />
                                            </div>
                                            <div class="form-group mb-3">
                                                <input name="HinhAnh" class="form-control rounded-pill px-4 py-2" placeholder="Link ảnh đại diện (không bắt buộc)" />
                                            </div>
                                            <div class="text-center mb-3">
                                                <button type="submit" class="btn btn-primary rounded-pill px-5 py-2" style="background-color: #ff85a2; border: none; font-size: 17px;">ĐĂNG KÝ</button>
                                            </div>
                                            <div class="text-center small">
                                                <span>Đã có tài khoản?</span>
                                                <a href="javascript:void(0);" class="fw-bold text-primary text-decoration-none" onclick="showLoginForm()">Đăng nhập</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="search d-lg-block d-none">
                        <form class="position-relative">
                            <input type="text" class="form-control bg-secondary border-0 rounded-5 px-4 py-2" placeholder="Tìm kiếm...">
                            <a href="#" class="position-absolute top-50 end-0 translate-middle-y p-1 me-3">
                                <iconify-icon icon="mdi:magnify" width="20" height="20" style="padding: 10px 0px 0px 0px"></iconify-icon>
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
