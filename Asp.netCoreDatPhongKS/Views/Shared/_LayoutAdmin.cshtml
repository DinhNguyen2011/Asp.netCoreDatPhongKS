<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Quản lý đặt phòng khách sạn</title>
    <link rel="stylesheet" href="~/LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/LayoutAdmin/assets/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="shortcut icon" href="~/LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="@Url.Action("Index","HomeAdmin")"><img src="~/LayoutAdmin/assets/images/hoteo.png" alt="logo" style="height:60px; width:250px !important; border-radius:8px !important;" /></a>
                <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index","HomeAdmin")"><img src="~/LayoutAdmin/assets/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                            <div class="nav-profile-img">
                                <img src="~/LayoutAdmin/assets/images/faces/avt.jpg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">Hi, @ViewData["Hoten"]</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached me-2 text-success"></i> Nhật ký
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Logout", "TaiKhoan", new { area = "" })">
                                <i class="mdi mdi-logout me-2 text-primary"></i> Đăng xuất
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "HomeAdmin")">
                            <span class="menu-title">Trang chủ</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var quyen = Context.Session.GetString("Quyen") != null ? System.Text.Json.JsonSerializer.Deserialize<List<string>>(Context.Session.GetString("Quyen")) : new List<string>();
                            var hasManageRoom = quyen.Contains("ManageRoom") || quyen.Contains("ViewRoom");
                        }
                        <a class="nav-link" href="@(hasManageRoom ? Url.Action("Index", "Phong") : "#")" onclick="@(!hasManageRoom ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý phòng</span>
                            <i class="mdi mdi-bed menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManageDichVu = quyen.Contains("ManageDichVu");
                        }
                        <a class="nav-link" href="@(hasManageDichVu ? Url.Action("Index", "DichVu") : "#")" onclick="@(!hasManageDichVu ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý dịch vụ</span>
                            <i class="mdi mdi-television menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManageDatPhong = quyen.Contains("ManageDatPhong") || quyen.Contains("BookRoom") || quyen.Contains("CreateBooking");
                        }
                        <a class="nav-link" href="@(hasManageDatPhong ? Url.Action("Index", "DatPhong") : "#")" onclick="@(!hasManageDatPhong ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý đặt phòng</span>
                            <i class="mdi mdi-bookmark-check menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManageKhachHang = quyen.Contains("ManageKhachHang") || quyen.Contains("ViewCus") || quyen.Contains("CreateCus") || quyen.Contains("EditCus") || quyen.Contains("DeleteCus");
                        }
                        <a class="nav-link" href="@(hasManageKhachHang ? Url.Action("ManageKhachHang", "TaiKhoan") : "#")" onclick="@(!hasManageKhachHang ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý khách hàng</span>
                            <i class="mdi mdi-account menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManageTaiKhoan = quyen.Contains("ManageTaiKhoan");
                        }
                        <a class="nav-link" href="@(hasManageTaiKhoan ? Url.Action("Index", "QuanLyTaiKhoan") : "#")" onclick="@(!hasManageTaiKhoan ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý tài khoản</span>
                            <i class="mdi mdi-account-circle menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManageHoaDon = quyen.Contains("ManageHoaDon");
                        }
                        <a class="nav-link" href="@(hasManageHoaDon ? Url.Action("Index", "HoaDon") : "#")" onclick="@(!hasManageHoaDon ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý hóa đơn</span>
                            <i class="mdi mdi-file-check menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManageLoaiPhong = quyen.Contains("ManageLoaiPhong");
                        }
                        <a class="nav-link" href="@(hasManageLoaiPhong ? Url.Action("Index", "Loaiphong") : "#")" onclick="@(!hasManageLoaiPhong ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý loại phòng</span>
                            <i class="mdi mdi-home-variant menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            var hasManagePhanQuyen = quyen.Contains("ManagePhanQuyen");
                        }
                        <a class="nav-link" href="@(hasManagePhanQuyen ? Url.Action("Index", "PhanQuyen") : "#")" onclick="@(!hasManagePhanQuyen ? "toastr.error('Bạn không có quyền truy cập này'); return false;" : "")">
                            <span class="menu-title">Quản lý phân quyền</span>
                            <i class="mdi mdi-account-key menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <footer class="footer"></footer>
            </div>
        </div>
    </div>

    <script src="~/LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="~/LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="~/LayoutAdmin/assets/js/misc.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</body>
</html>