@model Asp.netCoreDatPhongKS.Models.KhuyenMai

@{
    ViewData["Title"] = "Xóa khuyến mãi";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa khuyến mãi</h2>

<h3>Bạn có chắc chắn muốn xóa khuyến mãi này?</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <h4>Thông tin khuyến mãi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã khuyến mãi</dt>
        <dd class="col-sm-10">@Model.MaKhuyenMai</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.MoTa</dd>
        <dt class="col-sm-2">Phần trăm giảm</dt>
        <dd class="col-sm-10">@Model.PhanTramGiam%</dd>
        <dt class="col-sm-2">Ngày bắt đầu</dt>
        <dd class="col-sm-10">@Model.NgayBatDau?.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Ngày kết thúc</dt>
        <dd class="col-sm-10">@Model.NgayKetThuc?.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@(Model.TrangThai == true ? "Hoạt động" : "Ngừng hoạt động")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="KhuyenMaiId" />
        <input type="submit" value="Xóa" class="btn btn-danger" @(Model.PhieuDatPhongs.Any() ? "disabled" : "") />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>