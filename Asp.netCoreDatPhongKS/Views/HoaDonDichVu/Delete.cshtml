@model Asp.netCoreDatPhongKS.Models.HoaDonDichVu

@{
    ViewData["Title"] = "Xóa hóa đơn dịch vụ";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa hóa đơn dịch vụ</h2>

<h3>Bạn có chắc chắn muốn xóa hóa đơn dịch vụ này?</h3>

<div>
    <h4>Thông tin hóa đơn dịch vụ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã đơn hàng DV</dt>
        <dd class="col-sm-10">@Model.MaDonHangDv</dd>
        <dt class="col-sm-2">Trạng thái thanh toán</dt>
        <dd class="col-sm-10">@Model.TrangThaiThanhToan</dd>
        <dt class="col-sm-2">Mã hóa đơn tổng</dt>
        <dd class="col-sm-10">@Model.MaHoaDonTong</dd>
        <dt class="col-sm-2">Ngày thanh toán</dt>
        <dd class="col-sm-10">@Model.NgayThanhToan?.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Hình thức thanh toán</dt>
        <dd class="col-sm-10">@Model.HinhThucThanhToan</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>