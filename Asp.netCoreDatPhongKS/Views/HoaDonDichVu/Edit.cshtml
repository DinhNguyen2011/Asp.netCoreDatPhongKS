@model Asp.netCoreDatPhongKS.Models.HoaDonDichVu

@{
    ViewData["Title"] = "Sửa thông tin hóa đơn dịch vụ";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Sửa thông tin hóa đơn dịch vụ</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="MaDonHangDv" class="control-label"></label>
        <select asp-for="MaDonHangDv" class="form-control" asp-items="ViewBag.MaDonHangDv"></select>
        <span asp-validation-for="MaDonHangDv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThaiThanhToan" class="control-label"></label>
        <input asp-for="TrangThaiThanhToan" class="form-control" />
        <span asp-validation-for="TrangThaiThanhToan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaHoaDonTong" class="control-label"></label>
        <select asp-for="MaHoaDonTong" class="form-control" asp-items="ViewBag.MaHoaDonTong">
            <option value="">Không có hóa đơn tổng</option>
        </select>
        <span asp-validation-for="MaHoaDonTong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NgayThanhToan" class="control-label"></label>
        <input asp-for="NgayThanhToan" class="form-control" type="date" value="@Model.NgayThanhToan?.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HinhThucThanhToan" class="control-label"></label>
        <input asp-for="HinhThucThanhToan" class="form-control" />
        <span asp-validation-for="HinhThucThanhToan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
