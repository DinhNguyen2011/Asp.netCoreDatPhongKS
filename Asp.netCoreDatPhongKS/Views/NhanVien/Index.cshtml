@model IEnumerable<Asp.netCoreDatPhongKS.Models.NhanVien>

@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<!-- Bootstrap CDN cho icon FontAwesome (nếu chưa có trong layout) -->
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" /> *@

<div class="container-fluid mt-3">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary"><i class="fas fa-users-cog"></i> Quản lý nhân viên</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm nhân viên mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Index" method="get" class="row g-2 mb-4">
        <div class="col-auto">
            <input type="text" name="searchString" id="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Tìm theo tên, email, SĐT..." />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Tìm kiếm</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th class="d-none d-md-table-cell">CCCD</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td class="d-none d-md-table-cell">@item.Cccd</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.NhanVienId" class="btn btn-sm btn-outline-info me-1" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.NhanVienId" class="btn btn-sm btn-outline-warning me-1" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.NhanVienId" class="btn btn-sm btn-outline-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa?')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
