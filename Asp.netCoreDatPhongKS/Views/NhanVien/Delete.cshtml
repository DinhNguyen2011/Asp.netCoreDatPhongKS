@model Asp.netCoreDatPhongKS.Models.NhanVien

@{
    ViewData["Title"] = "Xóa nhân viên";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa nhân viên</h2>

<h3>Bạn có chắc chắn muốn xóa nhân viên này?</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <h4>Thông tin nhân viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.SoDienThoai</dd>
        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>
        <dt class="col-sm-2">CCCD</dt>
        <dd class="col-sm-10">@Model.Cccd</dd>
        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh) && Model.HinhAnh != "/images/nhanvien/default.png")
            {
                <img src="@Url.Content(Model.HinhAnh)" alt="Hình ảnh" style="max-width: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">Tài khoản</dt>
        <dd class="col-sm-10">@Model.TaiKhoan?.Email</dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="NhanVienId" />
        <input type="submit" value="Xóa" class="btn btn-danger"
        @(Model.TaiKhoan != null && (Model.TaiKhoan.KhachHangs.Any() || Model.TaiKhoan.DanhGia.Any() || Model.TaiKhoan.LienHeVoiCtois.Any() || Model.TaiKhoan.QuyenTaiKhoans.Any()) ? "disabled" : "") />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>