@model Asp.netCoreDatPhongKS.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h2>Xóa khách hàng</h2>

<h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <h4>Thông tin khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.SoDienThoai</dd>
        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>
        <dt class="col-sm-2">CCCD</dt>
        <dd class="col-sm-10">@Model.Cccd</dd>
        <dt class="col-sm-2">Ghi chú</dt>
        <dd class="col-sm-10">@Model.GhiChu</dd>
        <dt class="col-sm-2">Tài khoản</dt>
        <dd class="col-sm-10">@Model.TaiKhoan?.TaiKhoanId</dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.NgayTao?.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="KhachHangId" />
        <input type="submit" value="Xóa" class="btn btn-danger"
        @(Model.DonHangDichVus.Any() || Model.HoaDons.Any() || Model.LienHeVoiCtois.Any() || Model.PhieuDatPhongs.Any() ? "disabled" : "") />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>