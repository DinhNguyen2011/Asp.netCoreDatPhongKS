@model IEnumerable<Asp.netCoreDatPhongKS.Models.KhachHang>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-people-fill"></i> Quản lý khách hàng</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-warning">@TempData["Success"]</div>
        }
    <div class="mb-3 d-flex justify-content-between flex-wrap">
        <a asp-action="Create" class="btn btn-success mb-2">
            <i class="bi bi-person-plus-fill"></i> Thêm khách hàng mới
        </a>
        <form asp-action="Index" method="get" class="d-flex align-items-center mb-2" role="search">
            <input type="text" name="searchString" id="searchString" class="form-control me-2"
                   placeholder="Tên, Email, SĐT..." value="@ViewBag.SearchString" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Tìm
            </button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle table-sm">
            <thead class="table-light">
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th class="d-none d-md-table-cell">Địa chỉ</th>
                    <th class="d-none d-md-table-cell">CCCD</th>
          @*           <th class="d-none d-lg-table-cell">Ghi chú</th> *@
                    <th>Mã tài khoản</th>
                    <th class="d-none d-md-table-cell">Ngày tạo</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td>@item.SoDienThoai</td>
                        <td class="d-none d-md-table-cell text-truncate" style="max-width: 150px;" title="@item.DiaChi">@item.DiaChi</td>
                        <td class="d-none d-md-table-cell">@item.Cccd</td>
                      @*   <td class="d-none d-lg-table-cell text-truncate" style="max-width: 150px;" title="@item.GhiChu">@item.GhiChu</td> *@
                        <td>@item.TaiKhoan?.TaiKhoanId</td>
                        <td class="d-none d-md-table-cell">@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.KhachHangId" class="btn btn-warning">
                                    <i class="fas fa-edit" title="Sửa"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.KhachHangId" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa khách hàng này?')">
                                    <i class="fas fa-trash-alt" title="Xóa"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
